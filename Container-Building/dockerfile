# Use official Python 3.10.12 base image
FROM python:3.10.12-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Set working directory
WORKDIR /app

# Copy dependency list
COPY requirements.txt .

# Install system dependencies for some Python packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libssl-dev \
    libffi-dev \
    libsystemd-dev \
    libglib2.0-dev \
    python3-gi \
    python3-apt \
    dbus \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip
RUN pip install --upgrade pip

# Install Python dependencies
RUN pip install -r requirements.txt


# Copy the rest of your application (if you have one)
COPY . .

# Example: expose FastAPI port
EXPOSE 8000


# Example: run FastAPI app (if main.py contains FastAPI app)
# Replace this CMD with your appâ€™s entrypoint if different
#CMD ["sh", "-c", "echo $API_KEY > .env"]

#CMD ["python3", "-m", "uvicorn", "app1:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

CMD ["sh", "-c", "echo OPENAI_API_KEY=$API_KEY > .env && python3 -m uvicorn app1:app --host 0.0.0.0 --port 8000 --reload"]


